<Window x:Class="Workshop_Orai_4.FoodEditor"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Workshop_Orai_4"
        mc:Ignorable="d"
        Title="FoodEditor" Height="450" Width="800">
    <Grid>
        <StackPanel x:Name="stack">
            <Label Content="Name" FontSize="30" Background="LightSkyBlue" Padding="10"/>
            <TextBox FontSize="30" Padding="10" Text="{Binding Actual.Name}" />
            <Label Content="Price" FontSize="30" Background="LightSkyBlue" Padding="10"/>
            <TextBox FontSize="30" Padding="10" Text="{Binding Actual.Price}"/>
            <Label Content="Quantity" FontSize="30" Background="LightSkyBlue" Padding="10"/>
            <TextBox FontSize="30" Padding="10" Text="{Binding Actual.Quantity}"/>
            <Button FontSize="25" Content="Save" Padding="17" Click="Button_Click" />
        </StackPanel>
    </Grid>
</Window>
